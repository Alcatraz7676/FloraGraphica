<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.axout.floragraphica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeActivity"
            android:label="Площадки"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".TulaActivity"
            android:label="Тула">
        </activity>

        <activity
                android:name=".FoodActivity"
                android:label="Фудсити">
        </activity>

        <activity
                android:name=".VarshActivity"
                android:label="Варшавка">
        </activity>

        <activity
                android:name=".AddDataActivity"
                android:label="Добавьте новые сорта"
                android:screenOrientation="portrait">
        </activity>

        <activity
                android:name=".AddTulaManuallyActivity"
                android:label="Добавление в Туле"
                android:screenOrientation="portrait">
        </activity>

        <activity
                android:name=".AddTulaScanActivity"
                android:label="Добавление в Туле"
                android:screenOrientation="portrait">
        </activity>

        <activity
                android:name=".CaptureAct"
                android:screenOrientation="fullSensor"
                android:stateNotNeeded="true"
                android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
    </application>

</manifest>